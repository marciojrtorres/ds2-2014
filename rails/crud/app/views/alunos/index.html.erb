<h1>Listing alunos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Turma</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.nome %></td>
        <td><%= aluno.turma %></td>
        <td><%= link_to 'Mostra', aluno %></td>
        <td><%= link_to 'Edita', edit_aluno_path(aluno) %></td>
        <td><%= link_to 'Exclui', aluno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Aluno', new_aluno_path %>
